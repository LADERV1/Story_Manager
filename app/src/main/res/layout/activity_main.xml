<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- AppBar with Title -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5D4EF5">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Story Manager"
            app:titleTextColor="#FFFFFF"
            android:elevation="6dp"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- App Logo with Cadre/Frame -->
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="2dp"
                app:strokeColor="#5D4EF5">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/app_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="App Logo"
                    android:src="@drawable/my_logo"
                    android:scaleType="centerCrop"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>

            <!-- Enhanced Title Section with Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome to Story Manager"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create, organize, and manage your stories with ease"
                        android:textColor="#757575"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ Write"
                            android:textColor="#5D4EF5"
                            android:textSize="14sp"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“š Organize"
                            android:textColor="#5D4EF5"
                            android:textSize="14sp"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ” Discover"
                            android:textColor="#5D4EF5"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- View Stories Button with [ðŸ“–] icon -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewStoriesButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#5D4EF5"
                    android:text="[ðŸ“–] View My Stories"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    app:cornerRadius="10dp"
                    app:iconSize="18dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Add Story Button with [+] icon -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addStoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="[+] Add New Story"
                    android:textColor="#5D4EF5"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    app:cornerRadius="10dp"
                    app:strokeColor="#5D4EF5"
                    app:strokeWidth="1dp"
                    app:iconSize="18dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="#5D4EF5"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Manage Authors Button with [ðŸ‘¤] icon -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manageAuthorsButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="[ðŸ‘¤] Manage Authors"
                    android:textColor="#5D4EF5"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    app:cornerRadius="10dp"
                    app:strokeColor="#5D4EF5"
                    app:strokeWidth="1dp"
                    app:iconSize="18dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="#5D4EF5"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Manage Categories Button with [ðŸ·ï¸] icon -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manageCategoriesButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="[ðŸ·ï¸] Manage Categories"
                    android:textColor="#5D4EF5"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    app:cornerRadius="10dp"
                    app:strokeColor="#5D4EF5"
                    app:strokeWidth="1dp"
                    app:iconSize="18dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="#5D4EF5"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Manage Countries Button with [ðŸŒŽ] icon -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manageCountriesButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="[ðŸŒŽ] Manage Countries"
                    android:textColor="#5D4EF5"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    app:cornerRadius="10dp"
                    app:strokeColor="#5D4EF5"
                    app:strokeWidth="1dp"
                    app:iconSize="18dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="#5D4EF5"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
